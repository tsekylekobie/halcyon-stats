<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Ign</th>
      <th>Region</th>
      <th>Karma</th>
      <th>Level</th>
      <th>Played</th>
      <th>Skilltier</th>
      <th>Wins</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.ign %></td>
        <td><%= player.region %></td>
        <td><%= player.karma %></td>
        <td><%= player.level %></td>
        <td><%= player.played %></td>
        <td><%= player.skillTier %></td>
        <td><%= player.wins %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

