<p id="notice"><%= notice %></p>

<h1>Participants</h1>

<table>
  <thead>
    <tr>
      <th>Hero</th>
      <th>Skin</th>
      <th>Kills</th>
      <th>Deaths</th>
      <th>Assists</th>
      <th>Farm</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.hero %></td>
        <td><%= participant.skin %></td>
        <td><%= participant.kills %></td>
        <td><%= participant.deaths %></td>
        <td><%= participant.assists %></td>
        <td><%= participant.farm %></td>
        <td><%= participant.id %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Participant', new_participant_path %>
